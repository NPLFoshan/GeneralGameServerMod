<?xml version="1.0" encoding="utf-8"?>
<!-- general game server configuration file -->
<GeneralGameServer>
  <!--which ip and port this server listens to. As well as the nid of itself.-->
  <Server 
    listenIp="0.0.0.0" 
    listenPort="9000"
    isControlServer=true
    isWorkerServer=true
    maxClientCount=8000
    maxWorldCount=200
    innerIp="10.28.18.2"
    innerPort="9000"
    outerIp="120.132.120.175"
    outerPort="9000">
    <!-- 内网Ip和Port用于服务端互联, 外网Ip和Port将会返回给客户端, 供其连接 -->
     <ControlServer
      innerIp="10.28.18.2"
      innerPort="9000"
      outerIp="120.132.120.175"
      outerPort="9000">
    </ControlServer>   
    <!-- 工作主机配置 -->
    <WorkerServer
      innerIp="10.28.18.2"
      innerPort="9000"
      outerIp="120.132.120.175"
      outerPort="9000">
    </WorkerServer>
  </Server>
  <!-- 世界相关信息配置
  areaSize: 世界区域大小 推荐值64, 128 设置此值后, 玩家信息同步只会同步当前玩家该范围内的玩家数据, 是一种优化选项, 禁用区域优化填0
  minClientCount: 最少玩家数 当玩家数量小于此值会保留离线玩家
  maxClientCount: 最大玩家数 当玩家数量大于此值,此世界不再接受玩家进入
  -->
  <World 
    areaSize=0
    minClientCount=50 
    maxClientCount=200>
  </World>
  <!-- 平行世界配置, 平行世界以区域为单位进行管理和控制
    areaSize: 每个区域的大小
    areaMinClientCount: 单区域的最小用户数
    areaMaxClientCount: 单区域的最大用户数
    minClientCount: 世界最小客户端数
    maxClientCount: 世界最大客户端数
  -->
  <ParaWorld
    areaSize=128
    areaMinClientCount=50
    areaMaxClientCount=200
    minClientCount=500
    maxClientCount=2000>
  </ParaWorld>
  <!-- 家园
    areaSize: 每个区域的大小
    areaMinClientCount: 单区域的最小用户数
    areaMaxClientCount: 单区域的最大用户数
    minClientCount: 世界最小客户端数
    maxClientCount: 世界最大客户端数
  -->
  <ParaWorldMini
    areaSize=128
    areaMinClientCount=50
    areaMaxClientCount=200
    minClientCount=0
    maxClientCount=200>
  </ParaWorldMini>
  <!--玩家配置-->
  <Player>
  </Player>
  <!-- Debug 配置项, 模块日志按业务分模块打印 -->
  <Debug
    Net=false
    PlayerLoginLogoutDebug=true>
  </Debug>
</GeneralGameServer>
