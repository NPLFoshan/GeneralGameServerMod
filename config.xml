<?xml version="1.0" encoding="utf-8"?>
<!-- general game server configuration file -->
<GeneralGameServer>
  <!--which ip and port this server listens to. As well as the nid of itself.-->
  <Server 
    listenIp="0.0.0.0" 
    listenPort="9000"
    isControlServer=true
    isWorkerServer=true
    maxClientCount=8000
    maxWorldCount=200
    innerIp="10.28.18.2"
    innerPort="9000"
    outerIp="120.132.120.175"
    outerPort="9000">
    <!-- 内网Ip和Port用于服务端互联, 外网Ip和Port将会返回给客户端, 供其连接 -->
     <ControlServer
      innerIp="10.28.18.2"
      innerPort="9000"
      outerIp="120.132.120.175"
      outerPort="9000">
    </ControlServer>   
    <!-- 工作主机配置 -->
    <WorkerServer
      innerIp="10.28.18.2"
      innerPort="9000"
      outerIp="120.132.120.175"
      outerPort="9000">
    </WorkerServer>
  </Server>
  <!-- 世界相关信息配置
  minClientCount: 最少玩家数 当玩家数量小于此值会保留离线玩家
  maxClientCount: 最大玩家数 当玩家数量大于此值,此世界不再接受玩家进入
  -->
  <World 
    minClientCount=50 
    maxClientCount=200>
  </World>
  <!--玩家配置-->
  <Player>
    <!--最小存活时间-->
    <MinAliveTime>60000</MinAliveTime>
  </Player>
  <Log level="INFO">
    <Module name="Mod.GeneralGameServerMod.Common.Connection" enable=false></Module>
    <Module name="Mod.GeneralGameServerMod.Client.EntityMainPlayer" enable=false></Module>
  </Log>
</GeneralGameServer>
